---
import Page from "@layouts/Page.astro";
import SignIn from "@layouts/User/SignIn";

import theme from "@config/theme";
import { set_ctx } from "@stores/context";

const logo = import.meta.env.APP_LOGO;
const name = import.meta.env.APP_NAME;
const title = "SignIn";
const description = "SignIn Page";
const path = "/user/signin";
const color = theme.light.primary;

set_ctx({
  logo,
  name,
  title,
  description,
  path,
  color,
});
---

<Page
  logo={logo}
  name={name}
  title={title}
  description={description}
  color={color}
>
  <SignIn client:only="solid" />
</Page>
