---
import Page from "@layouts/Page.astro";
import Theme from "@layouts/Provider/Theme";
import Authentication from "@layouts/Provider/Authentication";
import SignUp from "@layouts/User/SignUp";

import theme from "@config/theme";
import { set_ctx } from "@stores/context";

const logo = import.meta.env.APP_LOGO;
const name = import.meta.env.APP_NAME;
const title = "SignUp";
const description = "SignUp Page";
const path = "/user/signup";
const color = theme.light.primary;

set_ctx({
  logo,
  name,
  title,
  description,
  path,
  color,
});
---

<Page
  logo={logo}
  name={name}
  title={title}
  description={description}
  color={color}
>
  <SignUp client:only="solid" />
</Page>
